// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Postgres database for production (Vercel-compatible)
// For local dev, use DATABASE_URL in .env pointing to your Postgres instance
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Shopify session storage (used by @shopify/shopify-app-session-storage-prisma)
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Shop {
  id            String    @id @default(cuid())
  shopDomain    String    @unique
  accessToken   String
  installedAt   DateTime  @default(now())
  uninstalledAt DateTime?
  settings      Setting[]

  // Product rules for auto-tagger feature
  productRules  ProductRule[]
  
  // Products stored from webhooks
  products      Product[]

  @@index([shopDomain])
  @@map("shops")
}

// Settings model for per-shop key/value configuration
// Supports flexible settings storage without schema changes
model Setting {
  id     String @id @default(cuid())
  shopId String
  key    String
  value  String
  shop   Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, key])
  @@index([shopId])
  @@map("settings")
}

// Product rules for Auto Product Tagger v1
// All rules are strictly scoped to a shop via shopId (multi-tenant safety)
model ProductRule {
  id        String   @id @default(cuid())
  shopId    String
  field     String   // "price" | "inventory" | "vendor"
  operator  String   // "gt" | "lt" | "eq"
  value     String
  tag       String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@map("product_rules")
}

// Products synced from Shopify webhooks
// Stores product data for easy querying and viewing in Prisma Studio
model Product {
  id              String   @id @default(cuid())
  shopId          String
  shopifyProductId BigInt   // Shopify's numeric product ID
  title           String?
  vendor          String?
  tags            String?  // Comma-separated tags
  status          String?  // "active" | "draft" | "archived"
  price           String?  // Price from first variant (as string to preserve precision)
  totalInventory  Int?     // Sum of inventory across all variants
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, shopifyProductId])
  @@index([shopId])
  @@index([shopifyProductId])
  @@map("products")
}
